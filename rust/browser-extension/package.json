{
  "name": "freenet-ghostkey-extension",
  "version": "0.1.0",
  "description": "Chrome extension for Freenet ghost key management",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "clean": "rm -rf dist",
    "copy-wasm": "cp ../hugo-site/static/wasm/gkwasm.js ../hugo-site/static/wasm/gkwasm_bg.wasm wasm/",
    "prebuild": "npm run copy-wasm",
    "predev": "npm run copy-wasm"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "copy-webpack-plugin": "^12.0.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
